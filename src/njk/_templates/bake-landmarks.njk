{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ title }}{% endblock %}

{% block page_description %}{{ title }} by {{ author }}{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4">
          <img src="../img/landmarks/{{ image }}" alt="Picture of {{ name }}" class="img-fluid mb-4">
      </div>
      <div class="col-sm-8">
          <h1>{{ name }}</h1>
          <h3>{{ location }}</h3>
          <h6>{{ established }}</h6>
          <p>{{ description | safe }}</p>
          <p>Activities: {{ activities }}</p>
      </div>
    </div>
  </article>
{% endblock %}
