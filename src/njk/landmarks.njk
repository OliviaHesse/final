{% extends '_templates/base.njk' %}

{% block content %}
<article class="container">
  <div class="col-md-6 offset-md-3 justify-content-center text-center">
    <h1>Landmarks</h1>
    <p>Notable sights to see!</p>
  </div>
    <div class="row">
      {% for landmarks in austin.landmarks %}
      <div class="col-sm-6">
        <div class="card mb-4">
          <img src="img/landmarks/{{landmarks.image}}" class="card-img" alt="picture of landmark">
        </div>
        <div class="card-body">
          <h5 class="card-title">{{landmarks.name}}</h5>
          <p class="card-text">{{landmarks.activities}}</p>
          <p class="card-text"><small class="text-muted">{{landmarks.location}}</small></p>
          <a href="landmarks/{{landmarks.slug}}.html">more</a>
        </div>
      </div>
      {% endfor %}
  </div>
</article>
{% endblock %}
